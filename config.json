{
  "server": {
    "port": "${PORT}",
    "socketIoPort": "${SOCKET_IO_PORT}"
  },

  "cors": {
    "origins": "http://localhost:5173"
  },

  "mongo": { "mongoURI": "${MONGO_URI}" },

  "rabbitmq": {
    "url": "${RABBITMQ_URL}"
  },

  "proofOfWork": {
    "minDifficulty": 2,
    "maxDifficulty": 4,
    "difficultyStep": 2,
    "minComplexity": 100,
    "maxComplexity": 300,
    "complexityStep": 25,
    "difficultyResetPeriod": 86400000,
    "difficultyDecreasePeriod": 3600000,
    "challengeExpireAfter": 18000000000
  },

  "virgil": {
    "APP_ID": "${VIRGIL_APP_ID}",
    "APP_KEY_ID": "${VIRGIL_APP_KEY_ID}",
    "APP_KEY": "${VIRGIL_APP_KEY}"
  }
}
